<h1>Sign Up</h1>
<h2><%= link_to "Or Login", login_path %></h2>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br/> <br/>

  <%= f.label :email %>
  <%= f.email_field :email %><br/> <br/>

  <%= f.label :password %>
  <%= f.password_field :password %><br/> <br/>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %><br/> <br/>

  <%= f.submit "Sign up" %>
<% end %>